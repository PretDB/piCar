[Unit]
Description=local webcam streamer
After=network.target
Wants=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/mjpg_streamer -i "/usr/local/lib/mjpg-streamer/input_opencv.so -d /dev/video0 -r 1280x720 -q 20 -filter /usr/local/lib/mjpg-streamer/cvfilter_py.so -fargs /home/pi/locator/mjpg-streamer-opencv-test.py" -o "/usr/local/lib/mjpg-streamer/output_http.so -p 8080"
Restart=on-failure
RestartSec=3s

[Install]
WantedBy=multi-user.target
